generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model monitor {
  timestamp DateTime @db.Timestamptz(6)
  topic     String
  value     Float?

  @@id([topic, timestamp])
  @@index([timestamp], name: "monitor_timestamp_idx")
  @@index([timestamp, value], name: "monitor_timestamp_value_idx")
  @@index([topic, timestamp], name: "monitor_topic_timestamp_idx")
}
